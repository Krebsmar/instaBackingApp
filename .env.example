# =============================================================================
# instaBackingApp - Konfiguration
# =============================================================================
# Kopiere diese Datei nach .env und passe die Werte an:
#   cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Instagram Credentials (PFLICHT)
# -----------------------------------------------------------------------------
IG_USERNAME=dein_username
IG_PASSWORD=dein_passwort

# -----------------------------------------------------------------------------
# Zielaccounts (PFLICHT)
# Kommaseparierte Liste der Accounts, die unterstützt werden sollen
# -----------------------------------------------------------------------------
IG_TARGET_USERNAMES=account1,account2,account3

# -----------------------------------------------------------------------------
# Verarbeitungs-Einstellungen
# -----------------------------------------------------------------------------
# Intervall zwischen Zyklen in Sekunden (default: 3600 = 1 Stunde)
IG_CYCLE_SECONDS=3600

# Anzahl der Beiträge pro Account die abgerufen werden (default: 20)
IG_POSTS_AMOUNT=20

# Stunden nach denen Stories gelöscht werden (default: 24)
IG_CLEANUP_HOURS=24

# Stories verarbeiten (default: true)
IG_PROCESS_STORIES=true

# Posts verarbeiten (default: true)
IG_PROCESS_POSTS=true

# -----------------------------------------------------------------------------
# Rate-Limiting
# -----------------------------------------------------------------------------
# Sekunden zwischen API-Requests (default: 2.0)
IG_DELAY_BETWEEN_REQUESTS=2.0

# Sekunden zwischen Likes (default: 3.0)
IG_DELAY_BETWEEN_LIKES=3.0

# Sekunden zwischen Accounts (default: 10.0)
IG_DELAY_BETWEEN_ACCOUNTS=10.0

# Zufällige Variation der Delays in Prozent (default: 30)
IG_DELAY_JITTER_PERCENT=30

# Maximale Likes pro Stunde (default: 40)
IG_MAX_LIKES_PER_HOUR=40

# Maximale Likes pro Tag (default: 800)
IG_MAX_LIKES_PER_DAY=800

# Maximale API-Requests pro Stunde (default: 150)
IG_MAX_REQUESTS_PER_HOUR=150

# Backoff Basis-Sekunden bei Fehlern (default: 60)
IG_BACKOFF_BASE_SECONDS=60

# Backoff Maximum-Sekunden (default: 3600)
IG_BACKOFF_MAX_SECONDS=3600

# -----------------------------------------------------------------------------
# Session-Management
# -----------------------------------------------------------------------------
# Keep-Alive Intervall in Sekunden (default: 1800 = 30 Minuten)
IG_SESSION_KEEPALIVE_SECONDS=1800

# Maximale Login-Versuche (default: 3)
IG_MAX_LOGIN_ATTEMPTS=3

# -----------------------------------------------------------------------------
# Datenbank
# -----------------------------------------------------------------------------
# SQLite (default) oder PostgreSQL
DATABASE_URL=sqlite:///data/insta_backing.db

# Für PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
# Log-Level: DEBUG, INFO, WARNING, ERROR (default: INFO)
LOG_LEVEL=INFO

# Log-Format: json oder text (default: json)
LOG_FORMAT=json